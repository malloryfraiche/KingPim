



@model ProductAttributeValueViewModel


<table class="table table-bordered">
    <thead>
        <tr>
            <th><i><small><b>AttrGroup</b></small></i></th>
            <th><i><small><b>Products attribute</b></small></i></th>
            <th><i><small><b>Value</b></small></i></th>
        </tr>
    </thead>
    <tbody>
        <!-- Shows all product attributes and gives you a chance to add values. -->
        @foreach (var subcatAttrGroup in Model.CardSubcategoryAttributeGroups)
        {
            @foreach (var productAttr in subcatAttrGroup.AttributeGroup.ProductAttributes)
            {
                <tr>
                    <td><i><small>@subcatAttrGroup.AttributeGroup.Name</small></i></td>
                    <td value="@productAttr.Id"><i><small>@productAttr.Name</small></i></td>

                    @{

                        var test = Model.CardProductAttributeValues.FirstOrDefault(x => x.ProductAttribute.Id == productAttr.Id);
                        var test2 = test?.Value;
                    }

                    @if (productAttr.Type == "bool")
                    {
                        <td>
                            <form class="form-inline">
                                <select class="form-control-sm" required>


                                    @if (test2 != null)
                                    {
                                        <option>@test2</option>
                                    }
                                    else if (test2 == null)
                                    {
                                        <option value="" disabled selected>Please choose...</option>
                                        <option>Yes</option>
                                        <option>No</option>
                                    }
                                    
                                    <option>TEST</option>

                                </select>&nbsp;&nbsp;
                                <button class="btn btn-sm" type="submit"><i>Save</i></button>
                            </form>
                        </td>
                    }
                    else if (productAttr.Type == "int")
                    {
                        <td></td>
                    }
                    else if (productAttr.Type == "string")
                    {
                        <td>
                            <form class="form-inline">
                                <input class="form-control form-control-sm" type="text" required />&nbsp;&nbsp;
                                <button class="btn btn-sm" type="submit"><i>Save</i></button>
                            </form>
                        </td>
                    }
                </tr>
            }
        }
        
    </tbody>
</table>