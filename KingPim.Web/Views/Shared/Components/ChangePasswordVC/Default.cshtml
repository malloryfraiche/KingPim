@model AccountViewModel

<form asp-controller="Account" asp-action="" method="post" id="changePasswordForm" class="form-horizontal">
    <div class="form-group">
        <label asp-for="UserName" class="control-label px-4"><strong>Username:</strong></label>
        <div class="px-4">
            <input asp-for="UserName" class="form-control" required />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label px-4"><strong>New password:</strong></label>
        <div class="px-4">
            <input asp-for="Password" class="form-control" type="password" required />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label px-4"><strong>Confirm new password:</strong></label>
        <div class="px-4">
            <input asp-for="ConfirmPassword" class="form-control" type="password" required />
        </div>
    </div>
    <div class="form-group">
        <div class="px-4">
            <button class="btn btn-sm btn-success" type="submit">Save</button>
            <button id="closeChangePasswordBtn" class="btn btn-sm btn-secondary" type="button">Cancel</button>
        </div>
    </div>
</form>