@* AddNewSubcategoryVC *@

@model AddSubcategoryViewModel

<div class="form-group px-5">
    <h4><i>Add new subcategory</i></h4>
</div>
<br />

<form asp-controller="Subcategory" asp-action="AddSubcategory" class="form-horizontal" id="addNewSubcatForm">
    
    <div class="row">
        <div class="form-group col">
            <label asp-for="Name" class="control-label px-5"><strong>Name:</strong></label>
            <div class="px-5">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group col">
            <label asp-for="CategoryId" class="control-label col-sm-2"><strong>Category:</strong></label>
            <div class="col-sm-10">
                <select asp-for="CategoryId" class="form-control">
                    <option selected>Välj</option>
                    @foreach (var cat in Model.Category)
                    {
                        <option value="@cat.Id">@cat.Name</option>
                    }
                </select>
            </div>
        </div>
    </div>
    



    <div class="form-group">
        <div class="px-5">
            <button class="btn btn-sm btn-success" type="submit">Add @ViewBag.Title</button>
            <a class="btn btn-sm btn-secondary" id="cancelBtn">Cancel</a>
        </div>
    </div>
</form>