@* AddNewAttributeGroupVC *@

@model AttributeGroupProductAttributeViewModel

<div class="form-group px-5">
    <h4><i>Add new attribute group</i></h4>
</div>
<br />

<form asp-controller="AttributeGroup" asp-action="AddAttributeGroup" class="form-horizontal" id="addNewAttrGroupForm">
    <div class="row">
        <div class="form-group col">
            <label asp-for="Name" class="control-label px-5"><strong>Name:</strong></label>
            <div class="px-5">
                <input asp-for="Name" class="form-control" required />
            </div>
        </div>
        <div class="form-group col" title="TIPS: If you do not see your desired Subcategory here, first add a new Subcategory by surfing into the 'Subcategory' side menu.">
            <label asp-for="SubcategoryId" class="control-label col-sm-2"><strong>Subcategory:</strong></label>
            <div class="col-sm-10">
                <select asp-for="SubcategoryId" class="form-control" required>
                    <option value="" selected>Välj</option>
                    @foreach (var subcat in Model.Subcategory)
                    {
                        <option value="@subcat.Id">@subcat.Name</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label px-5"><strong>Description:</strong></label>
        <div class="px-5">
            <textarea asp-for="Description" class="form-control" form="addNewAttrGroupForm" required></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="px-5">
            <button class="btn btn-sm btn-success" type="submit">Add @ViewBag.Title</button>
            <a class="btn btn-sm btn-secondary" id="cancelBtn">Cancel</a>
        </div>
    </div>
</form>

