@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="container mx-auto" style="width: 330px; margin-top: 50px">
    <form asp-controller="Home" asp-action="Login" method="post" style="max-width: 330px;">
        <h2 class="form-login-heading" style="text-align: center; margin: 10px">King Pim</h2>

        <label asp-for="UserName" class="sr-only">Email address</label>
        <input asp-for="UserName" id="inputUserName" class="form-control" placeholder="Email address" required autofocus style="margin:10px" />
        <div><span asp-validation-for="UserName" class="text-danger"></span></div>

        <label asp-for="Password" class="sr-only">Password</label>
        <input asp-for="Password" id="inputPassword" class="form-control" placeholder="Password" type="password" required style="margin:10px" />
        <div><span asp-validation-for="Password" class="text-danger"></span></div>

        <button class="btn btn-primary btn-block" type="submit" style="margin:10px">Sign in</button>
        <a data-toggle="modal" href="#forgotPasswordModal" style="float:right;"><small>Forgot Password?</small></a>
    </form>
    <br />
    <br />
    <div class="text-danger" style="text-align: center;"><i>@ViewBag.SuccessResetMsg</i></div>
    <div class="text-danger" style="text-align: center;"><i>@ViewBag.CheckYourEmail</i></div>
</div> 
<!----- Forgot password modal ----->
<div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog" aria-labelledby="forgotPasswordModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title px-4"><strong>Reset password</strong></h5>
            </div>
            <div class="modal-body center px-4">
                <form asp-controller="Home" asp-action="ForgotPassword" method="post">
                    <div class="modal-body">
                        <p><small><i>Please enter username below. Your password reset link will be sent to your email.</i></small></p>
                        <div class="form-group">
                            <label asp-for="UserName"><strong>Username:</strong></label>
                            <input asp-for="UserName" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group" style="float:right;">
                        <button type="submit" class="btn btn-sm btn-outline-success">Send reset link</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>