@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="container mx-auto" style="width: 500px; margin-top: 50px">
    <div class="px-4"><h5><i>Reset password for KingPim</i></h5></div>
    <br />
    <form asp-controller="Home" asp-action="ResetPassword" method="post">
        <input asp-for="Code" type="hidden" value="@Model.Code" />
        <div class="form-group">
            <label asp-for="UserName" class="control-label px-4"><strong>Username:</strong></label>
            <div class="px-4">
                <input asp-for="UserName" class="form-control" placeholder="@Model.UserName" required />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label px-4"><strong>Password:</strong></label>
            <div class="px-4">
                <input asp-for="Password" class="form-control" required />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label px-4"><strong>Confirm password:</strong></label>
            <div class="px-4">
                <input asp-for="ConfirmPassword" class="form-control" type="password" required />
            </div>
        </div>
        <div class="form-group">
            <div class="px-4" style="float:right;">
                <button class="btn btn-sm btn-outline-success" type="submit">Reset password</button>
            </div>
        </div>

    </form>
</div>